@model EmployeeManagement.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Employee</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this employee?
</div>

<div class="card p-3 shadow-sm">
    <h4>@Model.FullName</h4>
    <p>Email: @Model.Email</p>
    <p>Department: @Model.Department</p>
</div>

<!-- ✅ IMPORTANT: This posts to "Delete", NOT "DeleteConfirmed" -->
@using (Html.BeginForm("Delete", "Employee", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.EmployeeId)
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary mt-3" })
}
