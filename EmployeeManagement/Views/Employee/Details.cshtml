@model EmployeeManagement.Models.Employee
@{
    ViewBag.Title = "Employee Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employee Details</h2>

<table class="table table-bordered">
    <tr><th>Full Name</th><td>@Model.FullName</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Phone</th><td>@Model.Phone</td></tr>
    <tr><th>Department</th><td>@Model.Department</td></tr>
    <tr><th>Date Of Joining</th><td>@Model.DateOfJoining?.ToString("yyyy-MM-dd")</td></tr>
    <tr><th>Salary</th><td>@Model.Salary?.ToString("C")</td></tr>
</table>

@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
@Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeId }, new { @class = "btn btn-warning" })
@Html.ActionLink("Delete", "Delete", new { id = Model.EmployeeId }, new { @class = "btn btn-danger" })
